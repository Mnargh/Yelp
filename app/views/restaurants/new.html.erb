<h1> Wagwan </h1>

<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>

  <%= link_to 'Back', restaurants_path %>
<% end %>
